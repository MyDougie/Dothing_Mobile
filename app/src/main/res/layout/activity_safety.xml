<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:background="@android:color/white"
    tools:context="dvorak.kosta.com.dothing_mobile.activity.SafetyActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="안전 심부름꾼 등록"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/textView18" />

    <ImageView
        android:id="@+id/safeImg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/border"
        android:layout_below="@+id/textView18"
        android:layout_alignRight="@+id/textView18"
        android:layout_alignEnd="@+id/textView18" />

    <Button
        android:id="@+id/safeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/safeImg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimaryDark"
        android:text="사진찾기"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/safeBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="안전 심부름꾼이 되면 모든 유저에게 신뢰감을 줄 수 있고, 수수료가 줄어듭니다! " />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView24"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:background="@android:color/holo_red_dark"
        android:gravity="center"
        android:text="신분증의 생년월일 앞자리를 가린 후 올려주세요!  추후에 관리자가 심사 후 인증 심부름꾼으로 등록해드립니다."
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/safeSubmitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등록"
        android:layout_below="@+id/textView26"
        android:layout_alignLeft="@+id/safeBtn"
        android:layout_alignStart="@+id/safeBtn"
        android:layout_marginTop="13dp" />
</RelativeLayout>
