<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/item_selector"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/errandTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/errandImg"
        android:layout_toEndOf="@+id/errandImg" />

    <TextView
        android:id="@+id/errandContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내용"
        android:layout_below="@+id/errandTitle"
        android:layout_toRightOf="@+id/errandImg"
        android:layout_toEndOf="@+id/errandImg" />

    <ImageView
        android:id="@+id/errandImg"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/errandAddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주소"
        android:layout_below="@+id/errandContent"
        android:layout_alignLeft="@+id/errandContent"
        android:layout_alignStart="@+id/errandContent" />

    <TextView
        android:id="@+id/errandPriceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/errandAddr"
        android:layout_toEndOf="@+id/errandImg"
        android:layout_toRightOf="@+id/errandImg"
        android:text="심부름 가격" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/errandPriceTitle"
        android:layout_marginLeft="82dp"
        android:layout_marginStart="82dp"
        android:layout_toEndOf="@+id/errandPriceTitle"
        android:layout_toRightOf="@+id/errandPriceTitle"
        android:text="물건 가격" />

    <TextView
        android:id="@+id/errandPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/errandPriceTitle"
        android:layout_centerHorizontal="true"
        android:text="0원" />

    <TextView
        android:id="@+id/productPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:text="0원" />
</RelativeLayout>
